<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dingohub.alerty.sensormanagement.SensorFusionActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/pitch_text"
        android:layout_height="wrap_content" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/roll_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pitch_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/inclination_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roll_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

</RelativeLayout>
